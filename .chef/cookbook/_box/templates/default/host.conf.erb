<VirtualHost *:80>
	ServerAlias *.local
	UseCanonicalName Off
	VirtualDocumentRoot "/vagrant/host/%-2+/htdocs/"
	VirtualScriptAlias "/vagrant/host/%-2+/htdocs/"
</VirtualHost>

<VirtualHost *:443>
	ServerAlias *.local
	UseCanonicalName Off
	VirtualDocumentRoot "/vagrant/host/%-2+/htdocs/"
	VirtualScriptAlias "/vagrant/host/%-2+/htdocs/"

	SSLEngine On
    SSLCertificateFile "/etc/apache2/ssl/server.crt"
    SSLCertificateKeyFile "/etc/apache2/ssl/server.key"
</VirtualHost>
