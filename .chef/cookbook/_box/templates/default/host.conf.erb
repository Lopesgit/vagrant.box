# Configuration
DocumentRoot /vagrant/
UseCanonicalName Off

# Environment Variables
SetEnv ENVIRONMENT local

# Subdomains
<VirtualHost *:80>
	ServerAlias *.*.*.local
	VirtualDocumentRoot "/vagrant/host/%-3.0.%-2.0-%-4+/htdocs/"
	VirtualScriptAlias "/vagrant/host/%-3.0.%-2.0-%-4+/htdocs/"

	php_admin_value auto_prepend_file "/vagrant/.box/document_root.php"
</VirtualHost>

<VirtualHost *:443>
	ServerAlias *.*.*.local
	VirtualDocumentRoot "/vagrant/host/%-3.0.%-2.0-%-4+/htdocs/"
	VirtualScriptAlias "/vagrant/host/%-3.0.%-2.0-%-4+/htdocs/"

	SSLEngine On
    SSLCertificateFile "/etc/apache2/ssl/server.crt"
    SSLCertificateKeyFile "/etc/apache2/ssl/server.key"

	php_admin_value auto_prepend_file "/vagrant/.box/document_root.php"
</VirtualHost>

# Domains
<VirtualHost *:80>
	ServerAlias *.local
	VirtualDocumentRoot "/vagrant/host/%-2+/htdocs/"
	VirtualScriptAlias "/vagrant/host/%-2+/htdocs/"

	php_admin_value auto_prepend_file "/vagrant/.box/document_root.php"
</VirtualHost>

<VirtualHost *:443>
	ServerAlias *.local
	VirtualDocumentRoot "/vagrant/host/%-2+/htdocs/"
	VirtualScriptAlias "/vagrant/host/%-2+/htdocs/"

	SSLEngine On
    SSLCertificateFile "/etc/apache2/ssl/server.crt"
    SSLCertificateKeyFile "/etc/apache2/ssl/server.key"

	php_admin_value auto_prepend_file "/vagrant/.box/document_root.php"
</VirtualHost>
