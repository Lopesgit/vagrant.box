<?xml version="1.0" encoding="UTF-8"?>

<project name="phpMyAdmin Installation" default="run">
	<target name="run" depends="prepare,download,install,configure,move,clean" />

	<target name="prepare">
		<mkdir dir=".build" />
		<mkdir dir="htdocs" />
	</target>

	<target name="download" depends="prepare">
		<httpget url="http://sourceforge.net/projects/phpmyadmin/files/latest/download" dir=".build" filename="pma.zip" followRedirects="true" />
	</target>

	<target name="install" depends="download">
		<unzip file=".build/pma.zip" todir=".build" forceExtract="true" />
		<exec command="mv .build/phpMyAdmin*/ .build/pma/" />
	</target>

	<target name="configure" depends="install">
		<exec command="cp config.inc.php .build/pma/config.inc.php" />
	</target>

	<target name="move" depends="configure">
		<exec command="mv .build/pma/* htdocs" />
	</target>

	<target name="clean" depends="move">
		<exec command="rm -rf .build" />
	</target>
</project>
